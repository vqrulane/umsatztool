{
    "$schema": "http://json.schemastore.org/prettierrc",
    "arrowParens": "avoid",
    "printWidth": 100,
    "quoteProps": "consistent",
    "endOfLine": "lf",
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": false,
    "jsxBracketSameLine": false,
    "overrides": [
        {
            "files": ["*.json", "*.yml", "*.md"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.{ts,tsx}",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
